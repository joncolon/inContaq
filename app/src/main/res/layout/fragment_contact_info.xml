<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    android:animateLayoutChanges="true">



    <android.support.v7.widget.CardView
        android:id="@+id/contact_info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_top"
        android:layout_marginStart="@dimen/card_margin_start"
        android:layout_marginEnd="@dimen/card_margin_end"
        android:animateLayoutChanges="true"
        app:cardBackgroundColor="@color/white_baby_powder">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/card_linlayout_margin_bottom"
            android:orientation="vertical"
            android:animateLayoutChanges="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_option"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/edit_btn_margin_bottom"
                android:text="@string/edit"
                android:textColor="@color/yellow_crayola"
                android:clickable="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_text_margin_start"
                    android:text="@string/name"
                    android:textColor="@color/blue_sapphire"
                    android:textSize="20sp"
                    android:layout_marginBottom="@dimen/text_info_margin_bottom"/>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColor="@color/blue_maastricht"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginStart="@dimen/card_text_margin_start"
                    android:hint="@string/enter_name"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_text_margin_start"
                    android:text="@string/mobile"
                    android:textColor="@color/blue_sapphire"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginBottom="@dimen/text_info_margin_bottom"
                    android:visibility="gone"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edit_mobile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:textColor="@color/blue_maastricht"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginEnd="20dp"
                    android:hint="@string/enter_mobile_number"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:text="@string/email"
                    android:textColor="@color/blue_sapphire"
                    android:textSize="20sp"
                    android:layout_marginBottom="@dimen/text_info_margin_bottom"
                    android:visibility="gone"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:textColor="@color/blue_maastricht"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:hint="@string/enter_valid_email_address"
                    android:visibility="gone"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:text="@string/address"
                    android:textColor="@color/blue_sapphire"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginBottom="@dimen/text_info_margin_bottom"
                    android:visibility="gone"
                    android:enabled="false"/>

                <EditText
                    android:id="@+id/edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:ems="10"
                    android:textColor="@color/blue_maastricht"
                    android:textSize="@dimen/card_info_text_size"
                    android:layout_marginStart="@dimen/card_margin_start"
                    android:hint="@string/enter_address"
                    android:visibility="gone"
                    android:enabled="false"/>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/contact_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|snap|enterAlways">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="@dimen/toolbar_margin_end"
            app:expandedTitleMarginStart="@dimen/toolbar_margin_start"
            app:layout_scrollFlags="scroll|snap|enterAlways">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/background_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/card_elevation"
                        app:cardPreventCornerOverlap="true"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        android:layout_marginStart="@dimen/contact_card_margin_left"
                        android:layout_marginTop="@dimen/contact_card_margin_top">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/contact_name"
                                android:layout_width="@dimen/contact_name_width"
                                android:background="@drawable/bg_polaroid_texture"
                                android:gravity="center|bottom"
                                android:paddingTop="@dimen/contact_name_pad_top"
                                android:text="@string/contact_name"
                                android:textAlignment="center"
                                android:textColor="@color/black_rich"
                                android:textSize="@dimen/contact_name_text_size"
                                android:elevation="@dimen/card_elevation"
                                android:layout_height="@dimen/contact_name_layout_height"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/contact_img"
                                android:layout_width="@dimen/contact_img_layout_width"
                                android:layout_height="@dimen/contact_img_layout_height"
                                android:layout_marginTop="@dimen/contact_img_margin_top"
                                android:layout_gravity="center"
                                android:background="@color/blue_sapphire"
                                android:foregroundGravity="center"
                                android:scaleType="centerCrop"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/save_button"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="@dimen/fab_margin_right"
            app:rippleColor="@color/red_rose_madder"
            android:layout_width="@dimen/fab_width"
            android:layout_height="70dp"
            android:src="@drawable/ic_save_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>