<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyc.c4q.jonathancolon.inContaq.contactlist.activities.PersonGroupActivity"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/person_group_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/card_margin_start">

        <TextView
            android:id="@+id/person_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/person_group_name" />

        <EditText
            android:id="@+id/edit_person_group_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/person_group_name"
            android:layout_toEndOf="@id/person_group_name"
            android:singleLine="true"
            android:maxLength="30"
            android:hint="@string/type_in_person_group_name_tip" />

    </RelativeLayout>

    <TextView
        android:id="@+id/person_group_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@id/info"
        android:layout_marginBottom="@dimen/card_margin_start"
        android:text="@string/person_group_tip" />

    <GridView
        android:id="@+id/gridView_persons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/person_group_name_view"
        android:layout_above="@id/person_group_tip"
        android:layout_marginBottom="@dimen/card_margin_start"
        android:numColumns="3"
        android:verticalSpacing="@dimen/card_margin_start"
        android:horizontalSpacing="@dimen/card_margin_start"
        android:gravity="center" />

    <TextView
        android:id="@id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/button_bar"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/card_margin_start"
            android:layout_marginEnd="@dimen/card_margin_start"
            android:text="@string/add_person"
            android:onClick="addPerson"
            style="@style/ButtonStyle" />

        <Button
            android:id="@id/done_and_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/done_and_save"
            android:onClick="doneAndSave"
            style="@style/ButtonStyle" />

    </LinearLayout>


</RelativeLayout>
